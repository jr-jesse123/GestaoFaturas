@page
@model GestaoFaturas.Api.Pages.Clients.ResponsiblePersons.DetailsModel

@{
    ViewData["Title"] = "Responsible Person Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>
            <hr />

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">@Model.ResponsiblePerson.Name</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Client</dt>
                        <dd class="col-sm-9">
                            <a asp-page="/Clients/Details" asp-route-id="@Model.ResponsiblePerson.ClientId">
                                @Model.ResponsiblePerson.Client?.CompanyName
                            </a>
                        </dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">
                            <a href="mailto:@Model.ResponsiblePerson.Email">@Model.ResponsiblePerson.Email</a>
                        </dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@(Model.ResponsiblePerson.Phone ?? "Not provided")</dd>

                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9">@(Model.ResponsiblePerson.Role ?? "Not specified")</dd>

                        <dt class="col-sm-3">Department</dt>
                        <dd class="col-sm-9">@(Model.ResponsiblePerson.Department ?? "Not specified")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.ResponsiblePerson.IsPrimaryContact)
                            {
                                <span class="badge bg-primary me-2">Primary Contact</span>
                            }
                            @if (Model.ResponsiblePerson.IsActive)
                            {
                                <span class="badge bg-success me-2">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary me-2">Inactive</span>
                            }
                            @if (Model.ResponsiblePerson.ReceivesNotifications)
                            {
                                <span class="badge bg-info">Receives Notifications</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created At</dt>
                        <dd class="col-sm-9">@Model.ResponsiblePerson.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                        <dt class="col-sm-3">Last Updated</dt>
                        <dd class="col-sm-9">@Model.ResponsiblePerson.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    </dl>

                    @if (Model.CostCenters.Any())
                    {
                        <hr />
                        <h6>Associated Cost Centers</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Cost Center</th>
                                        <th>Code</th>
                                        <th>Primary</th>
                                        <th>Assigned Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cc in Model.CostCenters)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-page="/CostCenters/Details" asp-route-id="@cc.CostCenter.Id">
                                                    @cc.CostCenter.Name
                                                </a>
                                            </td>
                                            <td>@cc.CostCenter.Code</td>
                                            <td>
                                                @if (cc.IsPrimary)
                                                {
                                                    <span class="badge bg-primary">Primary</span>
                                                }
                                            </td>
                                            <td>@cc.AssignedAt.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" asp-route-clientId="@Model.ResponsiblePerson.ClientId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.ResponsiblePerson.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.ResponsiblePerson.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>