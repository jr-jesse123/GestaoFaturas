@page
@model GestaoFaturas.Api.Pages.Clients.ResponsiblePersons.CreateModel

@{
    ViewData["Title"] = "Add Responsible Person";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>
            <h5 class="text-muted">@Model.Client?.CompanyName</h5>
            <hr />

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ResponsiblePerson.ClientId" value="@Model.ClientId" />

                        <partial name="_ResponsiblePersonForm" model="Model.ResponsiblePerson" />

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" asp-route-clientId="@Model.ClientId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}