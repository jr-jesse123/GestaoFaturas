@page
@model GestaoFaturas.Api.Pages.Clients.ResponsiblePersons.EditModel

@{
    ViewData["Title"] = "Edit Responsible Person";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>
            <h5 class="text-muted">@Model.ResponsiblePerson.Client?.CompanyName</h5>
            <hr />

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ResponsiblePerson.Id" />
                        <input type="hidden" asp-for="ResponsiblePerson.ClientId" />
                        <input type="hidden" asp-for="ResponsiblePerson.CreatedAt" />

                        <div class="mb-3">
                            <label asp-for="ResponsiblePerson.Name" class="form-label"></label>
                            <input asp-for="ResponsiblePerson.Name" class="form-control" />
                            <span asp-validation-for="ResponsiblePerson.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResponsiblePerson.Email" class="form-label"></label>
                            <input asp-for="ResponsiblePerson.Email" class="form-control" type="email" />
                            <span asp-validation-for="ResponsiblePerson.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResponsiblePerson.Phone" class="form-label"></label>
                            <input asp-for="ResponsiblePerson.Phone" class="form-control" type="tel" />
                            <span asp-validation-for="ResponsiblePerson.Phone" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ResponsiblePerson.Role" class="form-label"></label>
                                <input asp-for="ResponsiblePerson.Role" class="form-control" />
                                <span asp-validation-for="ResponsiblePerson.Role" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ResponsiblePerson.Department" class="form-label"></label>
                                <input asp-for="ResponsiblePerson.Department" class="form-control" />
                                <span asp-validation-for="ResponsiblePerson.Department" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="form-check">
                                    <input asp-for="ResponsiblePerson.IsPrimaryContact" class="form-check-input" type="checkbox" />
                                    <label asp-for="ResponsiblePerson.IsPrimaryContact" class="form-check-label">
                                        Primary Contact
                                    </label>
                                </div>
                                <small class="text-muted">Only one primary contact allowed per client</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="form-check">
                                    <input asp-for="ResponsiblePerson.IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="ResponsiblePerson.IsActive" class="form-check-label">
                                        Active
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="form-check">
                                    <input asp-for="ResponsiblePerson.ReceivesNotifications" class="form-check-input" type="checkbox" />
                                    <label asp-for="ResponsiblePerson.ReceivesNotifications" class="form-check-label">
                                        Receives Notifications
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted">Created At</label>
                                <input type="text" class="form-control-plaintext" readonly value="@Model.ResponsiblePerson.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted">Last Updated</label>
                                <input type="text" class="form-control-plaintext" readonly value="@Model.ResponsiblePerson.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" asp-route-clientId="@Model.ResponsiblePerson.ClientId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}