@page
@model GestaoFaturas.Api.Pages.Clients.ResponsiblePersons.DeleteModel

@{
    ViewData["Title"] = "Delete Responsible Person";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-danger">@ViewData["Title"]</h2>
            <hr />

            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning!</strong> Are you sure you want to delete this responsible person? This action cannot be undone.
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">@Model.ResponsiblePerson.Name</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Client</dt>
                        <dd class="col-sm-9">@Model.ResponsiblePerson.Client?.CompanyName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.ResponsiblePerson.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@(Model.ResponsiblePerson.Phone ?? "Not provided")</dd>

                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9">@(Model.ResponsiblePerson.Role ?? "Not specified")</dd>

                        <dt class="col-sm-3">Department</dt>
                        <dd class="col-sm-9">@(Model.ResponsiblePerson.Department ?? "Not specified")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.ResponsiblePerson.IsPrimaryContact)
                            {
                                <span class="badge bg-primary me-2">Primary Contact</span>
                            }
                            @if (Model.ResponsiblePerson.IsActive)
                            {
                                <span class="badge bg-success me-2">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary me-2">Inactive</span>
                            }
                        </dd>
                    </dl>

                    @if (Model.HasAssociations)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-info-circle-fill"></i>
                            <strong>Note:</strong> This person is associated with @Model.AssociatedCostCentersCount cost center(s). 
                            Deleting will remove all associations.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form method="post">
                        <input type="hidden" asp-for="ResponsiblePerson.Id" />
                        <input type="hidden" asp-for="ResponsiblePerson.ClientId" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" asp-route-clientId="@Model.ResponsiblePerson.ClientId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>