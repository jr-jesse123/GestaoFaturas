@page
@model GestaoFaturas.Api.Pages.Clients.ResponsiblePersons.IndexModel

@{
    ViewData["Title"] = "Responsible Persons";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
            <h5 class="text-muted">@Model.Client?.CompanyName</h5>
        </div>
        <div class="col text-end">
            <a asp-page="/Clients/Details" asp-route-id="@Model.ClientId" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Client
            </a>
            <a asp-page="Create" asp-route-clientId="@Model.ClientId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Responsible Person
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="responsiblePersonsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th>Primary</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var person in Model.ResponsiblePersons)
                        {
                            <tr>
                                <td>@person.Name</td>
                                <td>
                                    <a href="mailto:@person.Email">@person.Email</a>
                                </td>
                                <td>@person.Phone</td>
                                <td>@person.Role</td>
                                <td>@person.Department</td>
                                <td>
                                    @if (person.IsPrimaryContact)
                                    {
                                        <span class="badge bg-primary">Primary</span>
                                    }
                                </td>
                                <td>
                                    @if (person.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="Details" asp-route-id="@person.Id" class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@person.Id" class="btn btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@person.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#responsiblePersonsTable').DataTable({
                "order": [[5, "desc"], [0, "asc"]], // Sort by Primary (desc), then Name (asc)
                "pageLength": 25,
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                }
            });
        });
    </script>
}