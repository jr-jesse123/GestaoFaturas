@page
@model GestaoFaturas.Api.Pages.Clients.IndexModel
@{
    ViewData["Title"] = "Clients";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Client
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Search Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="post" asp-page-handler="Search">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-8 col-lg-10">
                                <label asp-for="SearchInput" class="form-label">Search Clients</label>
                                <input asp-for="SearchInput" class="form-control" placeholder="Search by company name, tax ID, or email..." value="@Model.SearchTerm" />
                            </div>
                            <div class="col-md-4 col-lg-2">
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <div class="mt-2">
                                <small class="text-muted">
                                    Searching for: "<strong>@Model.SearchTerm</strong>"
                                    <a asp-page="Index" class="text-decoration-none ms-2">Clear search</a>
                                </small>
                            </div>
                        }
                    </form>
                </div>
            </div>

            <!-- Clients Table -->
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">
                            Clients (@Model.Clients.TotalItems total)
                        </h6>
                        @if (Model.Clients.TotalItems > 0)
                        {
                            <small class="text-muted">
                                Showing @((Model.Clients.PageNumber - 1) * Model.Clients.PageSize + 1) to @Math.Min(Model.Clients.PageNumber * Model.Clients.PageSize, Model.Clients.TotalItems) of @Model.Clients.TotalItems
                            </small>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Clients.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Tax ID</th>
                                        <th class="d-none d-md-table-cell">Email</th>
                                        <th class="d-none d-lg-table-cell">Phone</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var client in Model.Clients.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@client.CompanyName</strong>
                                                    @if (!string.IsNullOrEmpty(client.TradeName))
                                                    {
                                                        <br><small class="text-muted">@client.TradeName</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <code class="bg-light px-2 py-1 rounded">@client.TaxId</code>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                @if (!string.IsNullOrEmpty(client.Email))
                                                {
                                                    <a href="mailto:@client.Email" class="text-decoration-none">@client.Email</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td class="d-none d-lg-table-cell">
                                                @if (!string.IsNullOrEmpty(client.Phone))
                                                {
                                                    <a href="tel:@client.Phone" class="text-decoration-none">@client.Phone</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td>
                                                @if (client.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-page="Details" asp-route-id="@client.Id" class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                        <span class="d-none d-lg-inline ms-1">View</span>
                                                    </a>
                                                    <a asp-page="Edit" asp-route-id="@client.Id" class="btn btn-outline-primary" title="Edit Client">
                                                        <i class="fas fa-edit"></i>
                                                        <span class="d-none d-lg-inline ms-1">Edit</span>
                                                    </a>
                                                    @if (client.IsActive)
                                                    {
                                                        <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@client.Id" class="d-inline">
                                                            <button type="submit" class="btn btn-outline-warning" title="Deactivate Client" 
                                                                    onclick="return confirm('Are you sure you want to deactivate this client?')">
                                                                <i class="fas fa-pause"></i>
                                                                <span class="d-none d-xl-inline ms-1">Deactivate</span>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <span>No clients found matching "@Model.SearchTerm"</span>
                                }
                                else
                                {
                                    <span>No clients registered yet</span>
                                }
                            </h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <span>Try adjusting your search criteria or</span>
                                }
                                <a asp-page="Create" class="text-decoration-none">create the first client</a>
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Pagination -->
            @if (Model.Clients.TotalPages > 1)
            {
                <nav aria-label="Clients pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <!-- Previous Page -->
                        @if (Model.Clients.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-pageNumber="@(Model.Clients.PageNumber - 1)" 
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-search="@Model.SearchTerm">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }

                        <!-- Page Numbers -->
                        @{
                            var startPage = Math.Max(1, Model.Clients.PageNumber - 2);
                            var endPage = Math.Min(Model.Clients.TotalPages, Model.Clients.PageNumber + 2);
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-pageNumber="1" 
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-search="@Model.SearchTerm">1</a>
                            </li>
                            @if (startPage > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.Clients.PageNumber ? "active" : "")">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-pageNumber="@i" 
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-search="@Model.SearchTerm">@i</a>
                            </li>
                        }

                        @if (endPage < Model.Clients.TotalPages)
                        {
                            @if (endPage < Model.Clients.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-pageNumber="@Model.Clients.TotalPages" 
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-search="@Model.SearchTerm">@Model.Clients.TotalPages</a>
                            </li>
                        }

                        <!-- Next Page -->
                        @if (Model.Clients.PageNumber < Model.Clients.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-pageNumber="@(Model.Clients.PageNumber + 1)" 
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-search="@Model.SearchTerm">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>