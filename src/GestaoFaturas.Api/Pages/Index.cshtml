@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">Welcome to Gest√£o de Faturas</h1>
                    <p class="text-muted mb-0">Manage your clients, invoices, and cost centers efficiently</p>
                </div>
            </div>

            <div class="row">
                <!-- Clients Card -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-users fa-3x text-primary"></i>
                            </div>
                            <h5 class="card-title">Client Management</h5>
                            <p class="card-text text-muted">
                                Manage your client database with full CRUD operations, search, and filtering capabilities.
                            </p>
                            <div class="mt-auto">
                                <a asp-page="/Clients/Index" class="btn btn-primary">
                                    <i class="fas fa-arrow-right me-2"></i>Go to Clients
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cost Centers Card -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-sitemap fa-3x text-secondary"></i>
                            </div>
                            <h5 class="card-title">Cost Centers</h5>
                            <p class="card-text text-muted">
                                Organize your business structure with cost centers for better financial tracking.
                            </p>
                            <div class="mt-auto">
                                <button class="btn btn-secondary" disabled>
                                    <i class="fas fa-clock me-2"></i>Coming Soon
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoices Card -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-file-invoice-dollar fa-3x text-success"></i>
                            </div>
                            <h5 class="card-title">Invoice Management</h5>
                            <p class="card-text text-muted">
                                Create, manage, and track invoices for your clients with comprehensive reporting.
                            </p>
                            <div class="mt-auto">
                                <button class="btn btn-secondary" disabled>
                                    <i class="fas fa-clock me-2"></i>Coming Soon
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-bolt me-2"></i>Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <a asp-page="/Clients/Create" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-plus me-2"></i>Add New Client
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a asp-page="/Clients/Index" class="btn btn-outline-info w-100">
                                        <i class="fas fa-search me-2"></i>Search Clients
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <button class="btn btn-outline-secondary w-100" disabled>
                                        <i class="fas fa-file-invoice me-2"></i>New Invoice
                                    </button>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <button class="btn btn-outline-secondary w-100" disabled>
                                        <i class="fas fa-chart-bar me-2"></i>Reports
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Info -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>System Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Application Version</h6>
                                    <p class="text-muted mb-3">v1.0.0 - Client Management Phase</p>
                                    
                                    <h6 class="fw-bold">Technology Stack</h6>
                                    <ul class="list-unstyled text-muted mb-3">
                                        <li><i class="fas fa-check text-success me-2"></i>ASP.NET Core 8</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Entity Framework Core</li>
                                        <li><i class="fas fa-check text-success me-2"></i>PostgreSQL Database</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Bootstrap 5.3</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Razor Pages</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Available Features</h6>
                                    <ul class="list-unstyled text-muted mb-3">
                                        <li><i class="fas fa-check text-success me-2"></i>Client CRUD Operations</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Client Search & Filtering</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Pagination Support</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Responsive Design</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Form Validation</li>
                                    </ul>
                                    
                                    <h6 class="fw-bold">Upcoming Features</h6>
                                    <ul class="list-unstyled text-muted">
                                        <li><i class="fas fa-clock text-warning me-2"></i>Cost Center Management</li>
                                        <li><i class="fas fa-clock text-warning me-2"></i>Invoice Management</li>
                                        <li><i class="fas fa-clock text-warning me-2"></i>Reporting & Analytics</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>